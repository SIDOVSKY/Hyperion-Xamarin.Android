<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2013/01/nuspec.xsd">
  <metadata>
    <id>Hyperion-Xamarin.Android</id>
    <version>1.1.0</version>
    <title>Hyperion-Xamarin.Android</title>
    <authors>SIDOVSKY</authors>
    <license type="expression">MIT</license>
    <projectUrl>https://github.com/SIDOVSKY/Hyperion-Xamarin.Android</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>Hyperion module pack for Xamarin.Android apps</description>
    <copyright>Vadim Sedov</copyright>
	<icon>icon.png</icon>
	<iconUrl>https://raw.githubusercontent.com/SIDOVSKY/Hyperion-Xamarin.Android/master/art/icon.png</iconUrl>
    <tags>xamarin android monodroid xamarin.android hyperion</tags>
    <dependencies>
      <group targetFramework="MonoAndroid">
        <dependency id="Xamarin.AndroidX.AppCompat" version="1.2.0.5" />
        <dependency id="Xamarin.AndroidX.RecyclerView" version="1.1.0.5" />
        <dependency id="Xamarin.AndroidX.SlidingPaneLayout" version="1.1.0" />
        <dependency id="Xamarin.AndroidX.SwipeRefreshLayout" version="1.1.0" />
        <dependency id="Xamarin.Google.Android.Material" version="1.1.0.5" />
        <dependency id="Xamarin.Google.Dagger" version="2.25.2.1" />
      </group>
    </dependencies>
	<releaseNotes>
		* Hyperion modules updated to version `0.9.28-SNAPSHOT`.
		  The main reason for using a snapshot version is a fix of annoying background shake activation.
		* Returned support for separate processes in Crash and Phoenix plugins.
		  See README for instructions to workaround a bug of multiprocess MonoRuntimeProvider generation for a custom Application class.
	</releaseNotes>
  </metadata>
  <files>
    <file src="art\icon.png" target="" />
    <file src="build\*.props" target="build" />
    <file src="HyperionAndroidLibs\**" target="HyperionAndroidLibs" />
  </files>
</package>